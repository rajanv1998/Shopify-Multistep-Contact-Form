<script>
  let currentStep = 1;

  function nextStep(step) {
    if (validateCurrentStep()) {
      if(step == 3){
         $('#ContactForm').submit();
      }
      else{  
      document.getElementById(`step-${step}`).classList.remove('active-step');
      currentStep = step + 1;
      document.getElementById(`step-${currentStep}`).classList.add('active-step');
      updateProgressBar();
      }
    }
  }

  function prevStep(step) {
    document.getElementById(`step-${step}`).classList.remove('active-step');
    currentStep = step - 1;
    document.getElementById(`step-${currentStep}`).classList.add('active-step');
    updateProgressBar();
  }
  function validateCurrentStep() {
  const currentStepFields = document.querySelectorAll(`#step-${currentStep} [required]`);
  let isValid = true;

  for (const field of currentStepFields) {
    const errorSpan = field.closest('.form_row').querySelector('.fielderror'); // Find the closest parent with .form_row and get the .fielderror inside it
    const formRow = field.closest('.form_row');
    if (field.type === 'radio' || field.type === 'checkbox') {
      const radioGroup = document.getElementsByName(field.name);
      let isChecked = false;

      for (const radio of radioGroup) {
        if (radio.checked) {
          isChecked = true;
          break;
        }
      }

      if (!isChecked) {
        displayError(errorSpan, formRow, `This field is required.`);
        isValid = false;
      } else {
        hideError(errorSpan, formRow);
      }
    } else if (field.tagName === 'SELECT' && field.value === '') {
      displayError(errorSpan, formRow, `This field is required.`);
      isValid = false;
    } else if (field.type === 'email') {
      if (!field.value.trim()) {
        displayError(errorSpan, formRow, 'You must enter an email address.');
        isValid = false;
      } else if (!isValidEmail(field.value)) {
        displayError(errorSpan, formRow, 'The email address entered is invalid, please check the formatting (e.g., email@domain.com).');
        isValid = false;
      } else {
        hideError(errorSpan, formRow);
      }
    } else if (!field.value.trim()) {
      displayError(errorSpan, formRow, `This field is required.`);
      isValid = false;
    } else {
      hideError(errorSpan, formRow);
    }
  }
  return isValid;
}
function displayError(errorElement, formRow, message) {
  errorElement.textContent = message;
  errorElement.style.display = 'block';
  formRow.classList.add('error');
}

function hideError(errorElement, formRow) {
  errorElement.textContent = '';
  errorElement.style.display = 'none';
  formRow.classList.remove('error');
}
// Function to validate email using regex
function isValidEmail(email) {
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  return emailRegex.test(email);
}
function updateProgressBar() {
  const progress = currentStep * 33;
  const totalSteps = 3; // Set the total number of steps
  const progressBar = document.getElementById('progress-indicator');
  const progressText = document.getElementById('progress-text');
  const currentStepElement = document.getElementById('current-step');
  const totalStepsElement = document.getElementById('total-steps');

  if (progress === 99) {
    const fullProgress = progress + 1;
    progressBar.style.width = `${fullProgress}%`;
    progressText.innerText = `${fullProgress}%`;
  } else {
    progressBar.style.width = `${progress}%`;
    progressText.innerText = `${progress}%`;
  }

  // Update step indicator
  currentStepElement.innerText = currentStep;
  totalStepsElement.innerText = totalSteps;
}
 
